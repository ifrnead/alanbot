<p id="notice"><%= notice %></p>

<div class="row"></div>
<h1>Informações</h1>

<table class="table table-striped table-bordered   table-hover">
  <thead>
    <tr>
        <th>Nome da Informação</th>
        <th>Ver</th>
        <th>Editar</th>
        <th>Deletar</th>
    </tr>
  </thead>

  <tbody>
    <% @informacoes.each do |informacao| %>
      <tr>
        <td><%= informacao.tipo %></td>
        <td><%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, informacao ,{class: "del_hover"}%></td>
        <td><%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, edit_informacao_path(informacao) ,{class: "del_hover"} %></td>
        <td>
          <%= link_to informacao , method: :delete, data: { confirm: 'Tem certeza?' },class:"del_hover" do %>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar Nova Informação', new_informacao_path,class: "btn btn-outline-info" %>
<%= link_to 'Voltar Para Página Inicial', root_path,class: "btn btn-outline-info" %>