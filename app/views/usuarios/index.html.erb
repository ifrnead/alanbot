<p id="notice"><%= notice %></p>
<div class="row"></div>
<h1>Usuários</h1>

<table  class="table table-striped table-bordered   table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Matricula</th>
      <th>Token</th>
      <th>Ver</th>
      <th>Editar</th>
      <th>Deletar</th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nome %></td>
        <td><%= usuario.matricula %></td>
        <td><%= usuario.token %></td>
        <td><%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, usuario ,{class: "del_hover"} %></td>
        <td><%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_usuario_path(usuario) ,{class: "del_hover"} %></td>
        <td>
          <%= link_to usuario , method: :delete, data: { confirm: 'Tem certeza?' },class:"del_hover" do %>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar Novo Usuário', new_usuario_path ,class: "btn btn-outline-info" %>

<%= link_to 'Voltar Para Página Inicial', root_path,class: "btn btn-outline-info" %>
