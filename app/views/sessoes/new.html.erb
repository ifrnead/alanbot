<div class="row justify-content-md-center">
  <div class="col-md-auto text-center">
    <%= image_tag "ead.png", class: 'logo' %>
  </div>

  <div class="col col-lg-4">
    <form class="form-signin" method="post" action="logar">
      <label for="matricula" class="sr-only">Matrícula</label>
      <input type="text" name="matricula" class="form-control" placeholder="Matrícula" required autofocus>
      <label for="senha" class="sr-only">Senha</label>
      <input type="password" name="senha" class="form-control" placeholder="Senha" required>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
    </form>
  </div>
</div>