<div class="row">
  <div class="col-sm">
    <h1><%= fa_icon 'building' %> Polo</h1>
  </div>
  <div class="col-sm text-right">
    <div class="btn-group" role="group" aria-label="Opções">
      <%= link_to fa_icon('pencil', text: 'Editar'), edit_polo_path(@polo), class: "btn btn-info"%> 
      <%= link_to fa_icon('trash', text: 'Apagar'), @polo, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-info" %>
      <%= link_to fa_icon('undo', text: 'Voltar'), polos_path, class: "btn btn-info" %>
    </div>
  </div>
</div>

<dl>
  <dt>Nome</dt><dd><%= @polo.nome %></dd>
  
</dl>