<div class="row">
  <div class="col-sm">
    <h1><%= fa_icon 'info-circle' %> Informações</h1>
  </div>
  <div class="col-sm text-right">
    <div class="btn-group" role="group" aria-label="Opções">
      <%= link_to fa_icon('plus', text: 'Novo Usuário'), new_informacao_path, class: "btn btn-info" %>
    </div>
  </div>
</div>

<% if @informacoes.empty? %>
  <p>Nenhuma informação encontrada.</p>
<% else %>
  <table  class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Tipo</th>
        <th>Opções</th>
      </tr>
    </thead>
    <tbody>
      <% @informacoes.each do |informacao| %>
        <tr>
          <td><%= informacao.tipo %></td>
          <td>
            <div class="btn-group" role="group" aria-label="Opções">
              <%= link_to fa_icon('eye', text: 'Detalhar'), informacao, class: "btn btn-sm btn-info" %>
              <%= link_to fa_icon('pencil', text: 'Editar'), edit_informacao_path(informacao), class: "btn btn-sm btn-info" %>
              <%= link_to fa_icon('trash', text: 'Apagar'), informacao, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-sm btn-info" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

