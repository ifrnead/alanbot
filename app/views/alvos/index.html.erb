
<p id="notice" ><%= notice %></p>

<div class="row"></div>
  <h1 class="">Alvos</h1>
  
  <table class="table table-striped table-bordered   table-hover">
    <thead class="">
      <tr>
        <th>Alvo</th>
        <th>Ver</th>
        <th>Editar</th>
        <th>Deletar</th>
              
      </tr>
    </thead>
  
    <tbody>
      <% @alvos.each do |alvo| %>
        <tr>
          <td><%= alvo.nome %></td>
          <td><%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, alvo,{class: "del_hover"}  %></td>
          <td><%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_alvo_path(alvo) ,{class: "del_hover"}%></td>
          <td>
          <%= link_to alvo , method: :delete, data: { confirm: 'Tem certeza?' },class:"del_hover" do %>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          <% end %>
        </td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>

