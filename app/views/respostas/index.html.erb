<p id="notice"><%= notice %></p>

<div class="row"></div>
<h1>Respostas</h1>

<table class="table table-striped table-bordered   table-hover">
  <thead>
    <tr>
      <th>Mensagem</th>
      <th>Alvo</th>
      <th>Informacao</th>
      <th>Ver</th>
      <th>Editar</th>
      <th>Deletar</th>
    </tr>
  </thead>

  <tbody>
    <% @respostas.each do |resposta| %>
      <tr>
        <td><%= resposta.mensagem %></td>
        <td><%= resposta.alvo.nome %></td>
        <td><%= resposta.informacao.tipo %></td>
        <td><%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, resposta ,{class: "del_hover"} %></td>
        <td><%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_resposta_path(resposta) ,{class: "del_hover"}%></td>
        <td>
          <%= link_to resposta , method: :delete, data: { confirm: 'Tem certeza?' },class:"del_hover" do %>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

